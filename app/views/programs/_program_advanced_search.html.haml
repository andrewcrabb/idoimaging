= search_form_for @q do |f|
  .row#form-text-search
    .col-md-2
      = f.label :function
      = f.select :function, feature_selector(Feature::FUNCTION), prompt: '  -  '
    .col-md-2
      = f.label :read_format
      = f.select :read_format, imageformat_selector, prompt: '  -  '
    .col-md-2
      = f.label :platform
      = f.select :platform, feature_selector(Feature::PLATFORM), prompt: '  -  '
    .col-md-2
      = f.label :name_cont
      = f.search_field :name_cont
    .col-md-2
      = f.label :summary_cont
      = f.search_field :summary_cont
  .row
    .col-md-2
      = f.label :interface
      = f.select :interface, feature_selector(Feature::INTERFACE), prompt: '  -  '
    .col-md-2
      = f.label :speciality
      = f.select :speciality, feature_selector(Feature::SPECIALITY), prompt: '  -  '
    .col-md-2
      = f.label :write_format
      = f.select :write_format, imageformat_selector, prompt: '  -  '
    .col-md-2
      = f.label "Audience"
      = f.select :for_audience, feature_selector(Feature::AUDIENCE), prompt: '  -  '
    .col-md-2
      = f.label "Source code"
      = f.select :language, feature_selector(Feature::LANGUAGE), prompt: '  -  '
  .row
    .col-md-2
      = f.label "Display"
      = f.select :display_function, feature_selector(Feature::DISPLAY), prompt: '  -  '
    .col-md-2
      = f.label "Header"
      = f.select :header_function, feature_selector(Feature::HEADER), prompt: '  -  '
    .col-md-2
      = f.label "Network"
      = f.select :network_function, feature_selector(Feature::NETWORK), prompt: '  -  '
    .col-md-2
      = f.label "Other"
      = f.select :other_function, feature_selector(Feature::OTHER), prompt: '  -  '
    .col-md-2
      = f.label "Programming"
      = f.select :programming_function, feature_selector(Feature::PROGRAMMING), prompt: '  -  '
  .row
    .col-md-4.submit-buttons
      %button.btn.btn-primary{type: :submit}
        Search
      = f.submit "Clear", :type => "reset", class: 'button btn btn-secondary'
